    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!-- <uses-permission android:name="getui.permission.GetuiService.第三方包名" /> -->
    <uses-permission android:name="getui.permission.GetuiService.com.science.strangertofriend" />

    <permission
        android:name="getui.permission.GetuiService.com.science.strangertofriend"
        android:protectionLevel="normal" >
    </permission>
    <!-- 个推SDK权限配置结束 -->


    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name="com.science.strangertofriend.utils.AppContext"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="0EDbtjyfixvEuZseysANcMov" />

        <activity
            android:name="com.science.strangertofriend.ui.LoginActivity"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.science.strangertofriend.MainActivity" >
        </activity>
        <activity android:name="com.science.strangertofriend.ui.BaseActivity" >
        </activity>
        <activity android:name="com.science.strangertofriend.ui.RegisterActivity" >
        </activity>
        <activity
            android:name="com.science.strangertofriend.ui.ForgetPasswordActivity"
            android:windowSoftInputMode="stateAlwaysVisible|stateVisible" >
        </activity>
        <activity android:name="com.science.strangertofriend.ui.ShowNearMenMapActivity" >
        </activity>
        <activity android:name="com.science.strangertofriend.ui.DecodeGameActivity" >
        </activity>
        <activity
            android:name="com.science.strangertofriend.ui.ChatRoomActivity"
            android:launchMode="singleTask" >
        </activity>

        <!-- 百度地图定位开始 -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.baidu.location.service_v2.2" >
                </action>
            </intent-filter>
        </service>
        <!-- 百度地图地位结束 -->


        <!-- 个推SDK配置开始 -->
        <!-- 配置的第三方参数属性 -->
        <meta-data
            android:name="PUSH_APPID"
            android:value="WPGRnf8j3972UkkcsZvlz1" />
        <meta-data
            android:name="PUSH_APPKEY"
            android:value="SNx2l0WBNS7YgGFkXWEzD8" />
        <meta-data
            android:name="PUSH_APPSECRET"
            android:value="N1u3U7Ny2a5FmYJyRtv7m8" />
        <meta-data
            android:name="PUSH_GROUPID"
            android:value="" />

        <!-- 配置第三方Receiver -->
        <receiver
            android:name="com.science.strangertofriend.receiver.CustomReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.igexin.sdk.action.WPGRnf8j3972UkkcsZvlz1" />
            </intent-filter>
        </receiver>

        <!-- 配置SDK核心服务 -->
        <service
            android:name="com.igexin.sdk.PushService"
            android:exported="true"
            android:label="NotificationCenter"
            android:process=":pushservice" >
        </service>

        <receiver android:name="com.igexin.sdk.PushReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="com.igexin.sdk.action.refreshls" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.igexin.sdk.PushManagerReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.igexin.sdk.action.pushmanager" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.igexin.sdk.PushActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:process=":pushservice"
            android:taskAffinity="com.igexin.sdk.PushActivityTask"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <service
            android:name="com.igexin.download.DownloadService"
            android:process=":pushservice" />

        <receiver android:name="com.igexin.download.DownloadReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.igexin.download.DownloadProvider"
            android:authorities="downloads.com.science.strangertofriend"
            android:process=":pushservice" />
